@model RentCartWeb.Core.Models.DisplayAvailableCars

@{
    ViewBag.Title = "Index";
}

<h2>List available cars</h2>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Index</title>
</head>
<body>
    <center>
        @if (Model != null)
        {
            if (Model.userinfo.Count > 0)
            {
                <table>
                    <tr>
                        <th>
                            CarId
                        </th>
                        <th>
                            Plate
                        </th>
                        <th>
                            Manufacturer
                        </th>
                        <th>
                            Model
                        </th>
                        <th>
                            LocationCar
                        </th>
                        <th></th>
                    </tr>



                    @foreach (var item in Model.userinfo)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.CarID)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Plate)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Manufacturer)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Model)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.LocationCar)
                            </td>
                            <td></td>
                        </tr>
                    }

                </table>
            }
        }
    </center>

</body>
</html>





